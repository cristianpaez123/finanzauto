<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Textos -->
    <style name="TitleText">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LinkText">
        <item name="android:textColor">@color/textHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CardView personalizada -->
    <style name="UserCardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:background">@color/backgroundCard</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.Finanzauto.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorSecondary</item> <!-- verde lima -->
        <item name="android:tint">@color/white</item> <!-- Ã­cono blanco -->
        <item name="elevation">8dp</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
    </style>

    <style name="Widget.Finanzauto.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/selector_bottom_nav</item>
        <item name="itemTextColor">@color/selector_bottom_nav</item>
        <item name="android:background">@color/backgroundCard</item>
        <item name="elevation">8dp</item>
    </style>
</resources>